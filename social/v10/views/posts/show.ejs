<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- <p class="lead">SocialMedia</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div> -->
            <div>
                <p style="text-align: center;" class="jumbotron">Cover pics soon</p>
                <img id="profile_pic" src="https://images.unsplash.com/photo-1574525868504-cb8801cde77f?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="profile">
                <h5 id="profile_name"><%= post.author.username %></h5>
            </div>
        </div>
        <div class="col-md-12">
            <div class="img-thumbnail">
                <img style="height: 600px;" class="img-fluid" src="<%= post.image%>">
                <div class="caption">
                    <!-- <h4 class="float-right">$12.00/night</h4> -->
                    <h4><a href=""><%=post.name%></a></h4>
                    <p><%= post.description %></p>
                    <p><em>Upload By:-<strong><%= post.author.username %></strong></em></p>
                    <% if(currentUser && post.author.id.equals(currentUser._id)) {%>
                        <a class="btn btn-outline-warning" href="/posts/<%=post._id%>/edit">Edit</a>
                        <form style="display: inline;" action="/posts/<%=post._id%>?_method=DELETE" method="post">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div style="margin-top: 20px;" class="well">
                <div class="text-right">
                    <a class="btn btn-outline-success" style="background-color: #ffa6c1; border-color:  #ffbfd3; color:white;" href="/posts/<%= post._id%>/comments/new">Add Comment</a>
                </div>
                <hr>
                <% post.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right"></span>
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <hr style="width: 50%;">
                <% }); %>
            </div>
        </div>
    </div>
</div>








<% include ../partials/footer %>