<style>
        .form-container{
          background: #fff;
          padding: 30px;
          border-radius: 10px;
          box-shadow: 6px 6px 10px 0px rgb(0,123,255);
        } 
          .res{
          width: 40%;
          margin: 25px auto;
        } 
         @media only screen and (max-width: 768px) {
          .res{
            width: 100%;
          }
        } 
</style>

<div class="container-fluid">
        <div style="margin-top: 40px;">
            <h1 style="text-align: center; color: #007bff; margin: 0; padding: 0;">Edit <%=post.name%></h1>
            <div class="form-container res">
                <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=post.name%>" name="post[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=post.image%>" name="post[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=post.description%>" name="post[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg">Update</button>
                    </div>
                </form>
                <a href="/posts">Go back</a>
            </div>
        </div>
       </div>

