<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">SocialMedia</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= post.image%>">
                <div class="caption">
                    <!-- <h4 class="float-right">$12.00/night</h4> -->
                    <h4><a href=""><%=post.name%></a></h4>
                    <p><%= post.description %></p>
                </div>
            </div>
            <div style="margin-top: 20px;" class="well">
                <div class="text-right">
                    <a class="btn btn-outline-success" style="background-color: #ffa6c1; border-color:  #ffbfd3; color:white;" href="/posts/<%= post._id%>/comments/new">Add Comment</a>
                </div>
                <hr>
                <% post.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="float-right">10 days ago</span>
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <hr style="width: 50%;">
                <% }); %>
            </div>
        </div>
    </div>
</div>








<% include ../partials/footer %>